model User {
  id            String          @id @default(cuid()) @map("_id")
  name          String
  email         String          @unique
  emailVerified Boolean         @default(false)
  image         String?
  role          String          @default("user")
  banned        Boolean         @default(false)
  bannedReason  String?
  banExpires    Int?

  creditsUsed   Int             @default(0)
  creditsTotal  Int             @default(20)

  accounts      Account[]
  sessions      Session[]

  connections   Connection[]
  userToProjects UserToGithubProject[]
  questionsAsked    Question[]

  password      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@schema("gitgrasp_schema")

}

model Account {
  id                     String   @id @default(cuid()) @map("_id")
  userId                 String  
  providerId             String  
  accountId              String    
  refreshToken           String?   
  accessToken            String?   
  accessTokenExpiresAt   DateTime?       
  refreshTokenExpiresAt  DateTime?      
  scope                  String?
  idToken                String?   
  password               String?  
 
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("gitgrasp_schema")

}

model Session {
  id             String   @id @default(cuid())  @map("_id")
  token          String   
  userId         String  
  expiresAt      DateTime 

  userAgent    String?
  ipAddress      String?
  impersonatedBy String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("gitgrasp_schema")
}

model Verification {
  id        String   @id @default(cuid()) @map("_id")
  identifier String
  value     String
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  @@schema("gitgrasp_schema")
}

model jwks {
  id        String   @id @default(cuid()) @map("_id")
  publicKey String
  privateKey String

  createdAt DateTime @default(now())

  @@schema("gitgrasp_schema")
}

model Connection {
  id               String          @id @default(uuid())
  name             String          @default("New Connection")
  description      String?
  connection       String?
  type             String
  details          String          @default("{}")
  User             User          @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId           String

  createdAt        DateTime        @default(now())  
  updatedAt        DateTime        @updatedAt

  @@unique([userId, name])

  @@schema("gitgrasp_schema")
}
