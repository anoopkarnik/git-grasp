model UserPurchase {
  id            String          @id @default(cuid())
  userId        String
  eventId       String
  description   String
  amount        Int
  currency      String
  date          DateTime @default(now())

  @@schema("gitgrasp_schema")
}

model UserFinancial {
  id            String          @id @default(cuid())
  userId        String        @unique
  customerId    String
  name          String
  email         String
  city          String
  country       String
  state         String
  street        String
  zipcode       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("gitgrasp_schema")
}